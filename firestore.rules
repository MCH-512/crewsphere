rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow server-side rendering to read user data for pre-loading pages.
    // Writes are still restricted.
    match /users/{userId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    
    // Default-deny all other collections unless explicitly allowed below
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
