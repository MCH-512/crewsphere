
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default deny: No user can read or write any data unless explicitly allowed.
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Users can read and update their own user profile document.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Logged-in users can create documents in these collections.
    match /suggestions/{suggestionId} {
      allow create: if request.auth != null;
    }
    match /safetyReports/{reportId} {
      allow create: if request.auth != null;
    }
    
    // Logged-in users can read documents from these public-knowledge collections.
    match /courses/{courseId} {
      allow read: if request.auth != null;
    }
    match /documents/{documentId} {
      allow read: if request.auth != null;
    }
    match /alerts/{alertId} {
      allow read: if request.auth != null;
    }

    // Allow admins to perform any action on any document.
    // This is a broad rule for development; production rules should be more granular.
    match /{document=**} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
